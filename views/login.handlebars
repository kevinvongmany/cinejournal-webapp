<div class="container">
  <div class="profile-header">
      <img src="/assets/images/profile.png" alt="Profile Picture" class="profile-picture">
      <p class="h5 mb-1">Welcome to CineJournal</p>
  </div>
  <div class="mt-4">
      <h1 class="h4">Sign In</h1>
    <form>
      <div class="form-group">
        <label for="email-login">Email</label>
        <input type="email" class="form-control" id="email-login" placeholder="Enter your email">
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" type="password" id="password-login" placeholder="Enter your password">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Sign In</button>
    </form>
      <div class="mt-3">
          <p>Don't have an account? <a href="/register">Sign Up</a></p>
          {{!-- <p>Forgot your password? <a href="/forgot-password">Reset Password</a></p> --}}
      </div>
  </div>
</div>
