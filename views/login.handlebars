  <h1 class="h4">Sign In</h1>
  {{! show the form }}
  <form class="login-form">
    <div class="form-group">
      <label for="email-login">Email</label>
      <input
        type="email"
        class="form-control"
        id="email-login"
        placeholder="Enter your email"
      />
    </div>
    <div class="form-group">
      <label for="password-login">Password</label>
      <input
        class="form-control"
        type="password"
        id="password-login"
        placeholder="Enter your password"
      />
    </div>
    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
  </form>
  <div class="mt-3">
    <p>Don't have an account? <a href="/register">Sign Up</a></p>
    {{! <p>Forgot your password? <a href="/forgot-password">Reset Password</a></p> }}
  </div>
  
{{! handle errors by showing a toast }}
<div
  class="toast"
  id="login-warning"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  data-delay="10000"
>
  <div class="toast-header">
    <i
      class="bi bi-exclamation rounded mr-1"
      style="font-size: 2rem; color: red;"
    ></i>
    <strong class="mr-auto">Error</strong>
<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    Login details are incorrect. Please try again.
  </div>
</div>
<div
  class="toast"
  id="login-error"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  data-delay="10000"
>
  <div class="toast-header">
    <i
      class="bi bi-exclamation rounded mr-1"
      style="font-size: 2rem; color: red;"
    ></i>
    <strong class="mr-auto">Error</strong>
<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    An error occurred while logging in, try again later.
  </div>
</div>
{{! load the login.js script }}
<script src="./js/login.js"></script>